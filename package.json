{
  "name": "bitcoin-wallet-generator",
  "version": "1.0.0",
  "description": "An Electron.js application for generating Bitcoin wallets from keyword phrases.",
  "author": "Your Name",
  "main": "main.js",
  "scripts": {
    "start": "electron --ignore-certificate-errors .",
    "build": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "bitcoinjs-lib": "^6.1.7",
    "bootstrap": "^5.3.0",
    "bs58": "^5.0.0",
    "crypto": "^1.0.1",
    "ecpair": "^3.0.0-rc.0",
    "jquery": "^3.6.0",
    "log4js": "^6.9.1",
    "secp256k1": "^5.0.1",
    "tiny-secp256k1": "^2.2.3",
    "wif": "^2.0.1"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.bitcoin.walletgenerator",
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": "arm64"
        },
        {
          "target": "dmg",
          "arch": "x64"
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    }
  }
}

{
  "name": "bitcoin-wallet-generator",
  "version": "1.0.0",
  "description": "An Electron.js application for generating Bitcoin wallets from keyword phrases.",
  "author": "Your Name",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "server": "node server/server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "multer": "1.4.5-lts.1",
    "bitcoinjs-lib": "^6.1.1",
    "axios": "^1.3.5",
    "dotenv": "^16.3.1",
    "ecpair": "^2.0.1",
    "wif": "2.0.6",
    "tiny-secp256k1": "^1.1.6",
    "socket.io": "^4.5.0",
    "p-limit": "^3.1.0",
    "prom-client": "^14.0.0"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^25.1.8",
    "socket.io-client": "^4.5.0"
  },
  "build": {
    "appId": "com.bitcoin.walletgenerator",
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": "arm64"
        },
        {
          "target": "dmg",
          "arch": "x64"
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    }
  }
}
